@using SearchingAggregator.Serialization
@model SearchingAggregator.Serialization.SearchResults

@{
    ViewData["Title"] = "Find from database";
    
    <div style="align-content: center">
        <form asp-action="FindFromDatabase" method="get" style="width: 80%; max-width: 500px;">
            <div class="input-group">
                <input type="text" class="form-control" name="query" value="@ViewBag.Query"
                       placeholder="Search from database..." />
                <div class="input-group-append" style="margin-left: 10px">
                    <button class="btn btn-primary" type="submit">Find</button>
                </div>
            </div>
        </form>
        @if (Model != null) {
            <ul class="list-group list-group-flush">
                @foreach (SearchResultItem item in Model.Items){
                    <li class="list-group-item">
                        <a href="@item.Link">@item.Title</a>
                        <p style="color: dimgrey">@item.Snippet</p>
                    </li>
                }
            </ul>
        }
    </div>
}
